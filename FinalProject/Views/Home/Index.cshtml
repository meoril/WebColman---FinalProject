        </video>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
            var c = document.getElementById("main-header");
            var ctx = c.getContext("2d");
            ctx.font = "20px Arial";
            ctx.strokeText("Hello and welcome to our book shop!", 10, 50);

                $('.loading').hide();
        });
    </script>
    }